<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="Dodaj wydarzenie"
                android:textColor="@color/text_c"
                android:textSize="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="130dp"
                    android:layout_height="200dp"

                    tools:srcCompat="@drawable/add" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="Nazwa"
                android:inputType="textPersonName"
                android:minHeight="50dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <EditText
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Opis"
                android:inputType="textMultiLine"
                android:minHeight="200dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_c"
            android:fontFamily="@font/bold_inter"
            android:textSize="20dp"
            android:text="Kategoria" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_c"
            android:fontFamily="@font/bold_inter"
            android:textSize="20dp"
            android:background="@drawable/edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_c"
            android:textSize="20dp"
            android:fontFamily="@font/bold_inter"
            android:text="Data startu" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/choose_start_date"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text"
            android:textColor="@color/text_c"
            android:padding="10dp"
            android:text="Wybierz datę"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_c"
            android:textSize="20dp"
            android:fontFamily="@font/bold_inter"
            android:text="Data wygaśnięcia" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/choose_end_date"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text"
            android:textColor="@color/text_c"
            android:padding="10dp"
            android:text="Wybierz datę"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_c"
            android:textSize="20dp"
            android:fontFamily="@font/bold_inter"
            android:text="Lokalizacja wydarzenia" />
        <EditText
            android:id="@+id/localization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Lokalizacja"
            android:inputType="textPersonName"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            android:padding="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square_button"
            android:backgroundTint="@color/button_1"
            android:text="Dodaj"
            android:textAllCaps="false" />
    </LinearLayout>



</ScrollView>