<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/button_1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_1"
            app:srcCompat="@drawable/person" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Imie i Nazwisko"
        android:fontFamily="@font/inter_bold"
        android:textSize="19dp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Opisz"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/types"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/t1"
                    style="@style/chip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checkable="true"
                    android:checked="true"
                    android:layout_marginLeft="10dp"
                    android:text="Moja potrzeba pomocy" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/t2"
                    style="@style/chip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checkable="true"
                    android:text="Moja pomoc" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/t3"
                    style="@style/chip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checkable="true"
                    android:text="Moje wydarzenia charytatywne" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/t4"
                    style="@style/chip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checkable="true"
                    android:text="Moje zgłoszenia" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/t5"
                    style="@style/chip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checkable="true"
                    android:text="Moje inicjatywy społeczne" />


            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/restart"
            android:layout_gravity="center"
            android:backgroundTint="@color/button_1"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/restart" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/settings"
            android:backgroundTint="@color/button_1"

            android:layout_width="50dp"
            android:layout_height="50dp"
android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/settings" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Twoje ogłoszenia"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_c"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type1" />
</LinearLayout>

</androidx.core.widget.NestedScrollView>